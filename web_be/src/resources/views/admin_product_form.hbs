{{!< layouts/admin_layout}}
<h2>{{#if (eq action 'edit')}}Sửa{{else}}Thêm{{/if}} sản phẩm</h2>
<form action="{{#if (eq action 'edit')}}/admin/products/edit/{{product.MaSP}}{{else}}/admin/products/add{{/if}}" method="POST" enctype="multipart/form-data" class="row g-3">
  <div class="col-md-6">
    <label class="form-label">Tên sản phẩm:</label>
    <input type="text" name="TenSP" value="{{product.TenSP}}" required class="form-control">
  </div>
  <div class="col-md-6">
    <label class="form-label">Loại sản phẩm:</label>
    <input type="text" name="TenLSP" value="{{product.TenLSP}}" required class="form-control">
  </div>
  <div class="col-md-4">
    <label class="form-label">Giá:</label>
    <input type="number" name="DonGia" value="{{product.DonGia}}" required class="form-control">
  </div>
  <div class="col-md-4">
    <label class="form-label">Số lượng:</label>
    <input type="number" name="SoLuong" value="{{product.SoLuong}}" required class="form-control">
  </div>
  <div class="col-md-12">
    <label class="form-label">Thông tin sản phẩm:</label>
    <textarea name="MoTa" required class="form-control">{{product.MoTa}}</textarea>
  </div>
  <div class="col-md-6">
    <label class="form-label">Hình ảnh:</label>
    <input type="file" name="image" accept="image/*" class="form-control">
    {{#if product.image}}
      <br><img src="{{product.image}}" alt="Ảnh sản phẩm" style="width:100px;height:100px;object-fit:cover;">
    {{/if}}
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="/admin/products" class="btn btn-secondary">Quay lại</a>
  </div>
</form> 